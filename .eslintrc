{
  "root": true,
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
    "max-len":[2, {
      "code": 110,
      "ignoreUrls": true
    }],
    "indent": [2, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "no-shadow": [1, { "allow": ["req", "res", "err"] }],
    "no-unused-vars": 0,
    "curly": [1, "multi-line"],
    "linebreak-style": 0,
    "no-undef": 0,
    "import/no-unresolved": 0,
    "arrow-body-style": 0,
    "function-paren-newline":0,
    "prefer-promise-reject-errors":0,
    "valid-jsdoc": [1,{
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": false,
      "requireReturnDescription": false
    }
    ],
    "require-jsdoc": [1,{
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }
    ]
  }
}
